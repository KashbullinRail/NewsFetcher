<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_marginTop="10dp"
    android:backgroundTint="?attr/colorSurfaceVariant"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?attr/colorPrimary" />

    <TextView
        android:id="@+id/tvNameMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/name_source"
        android:textColor="@color/black_100"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivNewsImageMain"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTitleMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="?attr/colorAccented"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/tvDataMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/non_text"
        android:textColor="?attr/colorAccented"
        tools:text="@tools:sample/date/ddmmyy" />

    <ImageView
        android:id="@+id/iv_bookmarks_full"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:padding="15dp"
        android:src="@drawable/ic_bookmark"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_bookmarks_empty"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:padding="15dp"
        android:src="@drawable/ic_bookmark_border" />

</LinearLayout>